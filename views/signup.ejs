</head>
<body ng-app="SignUpCtrl"  ><!--style="background-image: url(./images/frij.png);-->
<div class="container" ng-controller="SignUpController">
    <!--<img src="/images/frij.png" alt="">-->
    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Signup</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message !== null) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <pre>
            {{hello}}
        </pre>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post" name="form" ><!--enctype="multipart/form-data"-->
            <div class="form-group">
                <label>Nickname</label>
                <input type="text" class="form-control" name="nickname">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
                <label>Photo</label>
                <input type="file" class="form-control" ngf-select name="file" ng-model="file"  ngf-pattern="'image/*'" ngf-accept="'image/*'" ngf-max-size="20MB">
            </div>

            <button type="submit" class="btn btn-warning btn-lg" ng-click="submit()">Signup</button>
        </form>

        <hr>



        <p>Already have an account? <a href="/login">Login</a></p>
        <p>Or go <a href="/">home</a>.</p>

    </div>

</div>
</body>
</html>